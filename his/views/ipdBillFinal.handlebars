    function bindPatientData() {
        $('#lblError').html('');
        var data = {
            IN_USER_ID: "1",
            IN_BRANCH_ID: "1",
            IN_ID: $("#cmbPatient").val(),
            IN_CODE: "0",
            IN_ADMISSION_STATUS_ID: "1",
            IN_STATUS: "0"
        };
        $.ajax({
            url: 'getAdmittedPatientDetails',
            type: "POST",
            data: JSON.stringify(data),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.message == 0)
                    alert("Invalid User.");
                else {
                    if ($("#cmbPatient").val() === '0') { 
                            $('#txtAID').val("");    
                            $('#txtPID').val("");      
                            $('#txtPatientName').val("");    
                            $('#txtAge').val("");    

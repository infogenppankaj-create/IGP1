    });


    //Save event
    $("#btnsave").on("click", function () {    
        var inpObj1 = document.getElementById("txtCode");
        var inpObj2 = document.getElementById("txtName");
        if (!inpObj1.checkValidity() || !inpObj2.checkValidity()) {
            alert("Please fill in the required fields:");
        }
        else {  
            $('#lblError').html('');
            var data = {
                "IN_USER_ID": "0",
                "IN_BRANCH_ID": "0",
                "IN_ID": $("#cmbSelect").val(),
                "IN_CODE": $("#txtCode").val(),
                "IN_NAME": $("#txtName").val(),
                "IN_TARIFF_ID": $("#cmbTariff").val(),
                "IN_APPROVAL_REQUIRED": $("#chkApproval").is(":checked"), // "1",
                "IN_ADDRESS": $("#txtAddress").val(),
                "IN_MOBILE": $("#txtMobile").val(),
                "IN_EMAIL": $("#txtEmail").val(),
                "IN_FAX": $("#txFax").val(),
                "IN_WEBSITE": $("#txtWebsite").val(),
                "IN_CONTACT_NAME1": $("#txtContactPersion1").val(),
                "IN_DESIGNATION1": $("#txtDesignation1").val(),
                "IN_MOBILE1": $("#txtMobile1").val(),
                "IN_EMAIL1": $("#txtEmail1").val(),		
                "IN_CONTACT_NAME2": $("#txtContactPersion2").val(),
                "IN_DESIGNATION2": $("#txtDesignation2").val(),
                "IN_MOBILE2": $("#txtMobile2").val(),
                "IN_EMAIL2": $("#txtEmail2").val(),
                "IN_DESCRIPTION": $("#txtDescription").val(),
                "IN_STATUS": $("#cmbStatus").val(),
            }
            console.log("data",  data)
            $.ajax({
                url: 'saveCompany',
                type: "POST",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json',
                success: function (data) {
                    if (data.message == 0)
                    {
                        alert("Save Error!!");   
                        return false;                     
                    }
                    else
                    {
                        alert("Save Successfully.");
                        window.location.reload(true);
                    } 
                },
                error: function (jqXHR, exception) {
                    var msg = '';
                    if (jqXHR.status === 0) {
                        msg = 'Not connect.\n Verify Network.';
                    } else if (jqXHR.status == 404) {
                        msg = 'Requested page not found. [404]';
                    } else if (jqXHR.status == 500) {
                        msg = 'Internal Server Error [500].';
                    } else if (exception === 'parsererror') {
                        msg = 'Requested JSON parse failed.';
                    } else if (exception === 'timeout') {
                        msg = 'Time out error.';
                    } else if (exception === 'abort') {
                        msg = 'Ajax request aborted.';
                    } else {
                        msg = 'Uncaught Error.\n' + jqXHR.responseText;
                    }
                    alert(msg);
                    return false;
                }
            });       
        }
    
    });
   

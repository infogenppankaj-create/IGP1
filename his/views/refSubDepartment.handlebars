<script>
    var defaultdata = {{{ data1 }}};
    $('#lblFormName').html("SubDepartment");
    
    //populate dropdown start
    var option = '';
    for (var i = 0; i < defaultdata.result.length; i++) {
        option += '<option value="' + defaultdata.result[i].ID + '">' + defaultdata.result[i].NAME + '</option>';
    }
    $('#cmbStatus').append(option);

    //
    var option = '';
    //option += '<option value="0">SELECT</option>';
    for (var i = 0; i < defaultdata.SubDepartmentCategory.length; i++) {
        option += '<option value="' + defaultdata.SubDepartmentCategory[i].ID + '">' + defaultdata.SubDepartmentCategory[i].NAME + '</option>';
    }
    $('#cmbSubDepartmentCategory').append(option);

    //
    var option = '';
    option += '<option value="0">SELECT</option>';
    for (var i = 0; i < defaultdata.Department.length; i++) {
        option += '<option value="' + defaultdata.Department[i].ID + '">' + defaultdata.Department[i].NAME + '</option>';
    }
    $('#cmbDeptName').append(option);

    var option = '';
    option += '<option value="0">SELECT</option>';
    for (var i = 0; i < defaultdata.SubDepartment.length; i++) {
        option += '<option value="' + defaultdata.SubDepartment[i].ID + '">' + defaultdata.SubDepartment[i].NAME + '</option>';
    }
    $('#cmbSelect').append(option);
    //populate dropdown end   

    //
    $('#cmbSelect').attr('disabled', true);
    $('#cmbStatus').attr('disabled', true);
   
    //
    $(function () {
        $("#cmbAU").change(function () {
            if ($("#cmbAU").val() === 'Add Department') { //Update Employee
                $('#cmbSelect').attr('disabled', true);
                $('#cmbStatus').attr('disabled', true);
                $("#cmbSelect").val(0).change();
                $("#cmbStatus").val(1).change();
            } else {
                $('#cmbSelect').attr('disabled', false);
                $('#cmbStatus').attr('disabled', false);
                $("#cmbSelect").val(0).change();
                $("#cmbStatus").val(1).change();
            }
        });
    });
    
    // Data bound after Combo selection option
    $(function () {        
        $("#cmbSelect").change(function () {
            $('#lblError').html('');
            bindData()
        });
    });

    //Populate Grid data after form load
    $(document).ready(function () {
        bindGrid();
        $("#example").dataTable().fnDestroy();
    });

    //Save event
    $("#btnsave").on("click", function () {    
        var inpObj1 = document.getElementById("txtCode");
        var inpObj2 = document.getElementById("txtName");
        if (!inpObj1.checkValidity() || !inpObj2.checkValidity()) {
            alert("Please fill in the required fields:");
        }
        else {  
            $('#lblError').html('');
            var data = {
                "IN_USER_ID": "0",
                "IN_BRANCH_ID": "0",
                "IN_ID": $("#cmbSelect").val(),
                "IN_DEPARTMENT_ID": $("#cmbDeptName").val(),
                "IN_CODE": $("#txtCode").val(),
                "IN_NAME": $("#txtName").val(),
                "IN_SUB_DEPARTMENT_CATEGORY_ID": $("#cmbSubDepartmentCategory").val(),
                "IN_DESCRIPTION": $("#txtDescription").val(),
                "IN_STATUS": $("#cmbStatus").val(),
            }
            //console.log("data",  data)
            $.ajax({
                url: 'saveSubDepartment',
                type: "POST",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json',
                success: function (data) {
                    if (data.message == 0)
                    {
                        alert("Save Error!!");   
                        return false;                     
                    }
                    else
                    {
                        alert("Save Successfully.");
                        window.location.reload(true);
                    } 
                },
                error: function (jqXHR, exception) {
                    var msg = '';
                    if (jqXHR.status === 0) {
                        msg = 'Not connect.\n Verify Network.';
                    } else if (jqXHR.status == 404) {
                        msg = 'Requested page not found. [404]';
                    } else if (jqXHR.status == 500) {
                        msg = 'Internal Server Error [500].';
                    } else if (exception === 'parsererror') {
                        msg = 'Requested JSON parse failed.';
                    } else if (exception === 'timeout') {
                        msg = 'Time out error.';
                    } else if (exception === 'abort') {
                        msg = 'Ajax request aborted.';
                    } else {
                        msg = 'Uncaught Error.\n' + jqXHR.responseText;
                    }
                    alert(msg);
                    return false;
                }
            });       
        }    
    });
   
    // Populate Grid Data 
    function bindGrid() {
        var data = {
            IN_USER_ID: "0",
            IN_BRANCH_ID: "0",
            IN_ID: "0",
            IN_STATUS: "0"
        };
        $.ajax({
            url: 'getSubDepartmentGrd',
            type: "POST",
            data: JSON.stringify(data),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.message == 0)
                    alert("Invalid User.");
                else {
                    dataSet = data;
                    $('#example').DataTable({
                        "order": [0, "desc"], // Order data                 
                        data: dataSet,
                        columns: [                        
                            { data: "ID" },
                            { data: "CODE"},
                            { data: "NAME"},
                            { data: "STATUS"},
                        ],
                        "columnDefs": [
                            {
                                "targets": [0],
                                "visible": false,
                                //"searchable": false
                            }
                        ]                              
                    });
                    var table = $('#example').DataTable();

                    $('#example tbody').on('click', 'tr', function () {
                        if ($(this).hasClass('selected')) {
                            $(this).removeClass('selected');
                        }
                        else {
                            table.$('tr.selected').removeClass('selected');
                            $(this).addClass('selected');
                        }                        
                    });
                }
            }
        });
    }

    //
    function bindData() {
        $('#lblError').html('');
        var data = {
            IN_USER_ID: "1",
            IN_BRANCH_ID: "1",
            IN_ID: $("#cmbSelect").val(),
            IN_STATUS: "0"
        };
        $.ajax({
            url: 'getSubDepartmentByID',
            type: "POST",
            data: JSON.stringify(data),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                if (data.message == 0)
                    alert("Invalid User.");
                else {
                    if ($("#cmbSelect").val() === '0') {           
                            $('#txtCode').val("");
                            $('#txtName').val("");
                            $('#cmbDeptName').val(0).change();
                            $('#cmbSubDepartmentCategory').val(1).change();
                            $('#txtDescription').val("");
                            $('#cmbStatus').val(1).change();   
                    }
                    else {                            
                            $('#txtCode').val(data[0].CODE);
                            $('#cmbDeptName').val(data[0].DEPARTMENT_ID).change();
                            $('#txtName').val(data[0].NAME);
                            $('#cmbSubDepartmentCategory').val(data[0].SUB_DEPARTMENT_CATEGORY_ID).change();
                            $('#txtDescription').val(data[0].DESCRIPTION);
                            $('#cmbStatus').val(data[0].STATUS_ID).change();
                    }
                }
            },
            error: function (jqXHR, exception) {
                var msg = '';
                if (jqXHR.status === 0) {
                    msg = 'Not connect.\n Verify Network.';
                } else if (jqXHR.status == 404) {
                    msg = 'Requested page not found. [404]';
                } else if (jqXHR.status == 500) {
                    msg = 'Internal Server Error [500].';
                } else if (exception === 'parsererror') {
                    msg = 'Requested JSON parse failed.';
                } else if (exception === 'timeout') {
                    msg = 'Time out error.';
                } else if (exception === 'abort') {
                    msg = 'Ajax request aborted.';
                } else {
                    msg = 'Uncaught Error.\n' + jqXHR.responseText;
                }
                alert(msg);
                return false;
            }
        });
    }

</script>
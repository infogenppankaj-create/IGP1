    //Save event
    $("#btnsave").on("click", function () {    
        var inpObj1 = document.getElementById("txtCode");
        var inpObj2 = document.getElementById("txtName");
        if (!inpObj1.checkValidity() || !inpObj2.checkValidity()) {
            alert("Please fill in the required fields:");
        }
        else {  
            $('#lblError').html('');

            if ($("#txtHCharge").val() === '') {

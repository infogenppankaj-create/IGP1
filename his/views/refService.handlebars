            }
            if ($("#txtTax").val() === '') {
                $('#txtTax').val("0");
            }
            if ($("#txtDisc").val() === '') {
                $('#txtDisc').val("0");
            }
           
            var data = {
                "IN_USER_ID": "0",
                "IN_BRANCH_ID": "0",
                "IN_ID": $("#cmbSelect").val(),
                "IN_DEPARTMENT_ID": $("#cmbDepartment").val(),
	            "IN_SUB_DEPARTMENT_ID": $("#cmbSubDepartment").val(),
                "IN_CODE": $("#txtCode").val(),
                "IN_NAME": $("#txtName").val(),
                "IN_SERVICE_GROUP_ID": $("#cmbServiceGroup").val(),
                "IN_BILLING_MESSAGE": $("#txtMessage").val(),
                "IN_DR_CHARGE": $("#txtDrCharge").val(),
